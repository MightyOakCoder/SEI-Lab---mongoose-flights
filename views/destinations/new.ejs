<%- include('../partials/header') %>

<div>Before adding, please ensure that the Destination is not in the following list:</div>
<section id="badge-container">
  <% destinations.forEach(function(d) { %>
    <article class="badge"><%= d.destination %></article>
    <article class="badge"><%= d.airport %></article>
    <article class="badge"><%= d.arrival %></article>
  <% }) %>
</section>

<form id="add-destination-form" action="/destinations" method="POST">
  <label>Airport:</label>
  <input type="text" name="airport">
  <label>Arrival Date & Time:</label>
  <input type="date" name="arrival">
  <input type="submit" value="Add Destination">
</form>

<%- include('../partials/footer') %>